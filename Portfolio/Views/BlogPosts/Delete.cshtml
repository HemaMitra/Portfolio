@model Portfolio.Models.BlogPost

@{
    ViewBag.Title = "Delete";
}

<br><br>
@*<h3 class="asmthead fade-toggle">Delete Blog</h3>*@

<h4 class="alignCenter">Are you sure you want to delete this?</h4>
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-7">
            @Html.DisplayFor(model => model.Title)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-7">
            @Html.Raw(Model.Body)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MediaURL, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-7">
            @Html.DisplayFor(model => model.MediaURL)
            @*@Html.ActionLink("Delete Photo", "DeletePhoto", new { MediaUrl = Model.MediaURL, id = Model.Id })*@

            @if (Model.MediaURL != null) { 
                <a href="@Url.Action("DeletePhoto", new { MediaUrl = Model.MediaURL, id = Model.Id })" class="colRed1">&nbsp;&nbsp;&nbsp;Delete Photo</a>
            }
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-7">
            @Html.DisplayFor(model => model.Category)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Published, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-7">
            @Html.DisplayFor(model => model.Published)
        </div>
    </div>

</div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="blogWrapper">
    
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "AdminIndex", null, new { @class = "btn btn-danger" })
            
         </div>, 
    
        </div>
    }


