		{
			for(num = 0;num < len;num++){
                if(str.charat(num) == 
                        str.charAt(len-1)){
                    len=len - 1; flag=1;
                    continue;}
                else{   flag=0; break;}
         } 
            // Displaying Result
			$('#Pali').removeClass('errMsg');
			if(flag == 1)
				$('#Pali').text('You have entered
                     a Palindrom').show();	
			else
				$('#Pali').text('The entered word 
                    is not a Palindrom').show();		
		}
	});
	// Clear fields
  $('body').on('click', '#ClrPali', function (){
